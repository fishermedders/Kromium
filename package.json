{
  "name": "kromium",
  "productName": "Kromium Browser",
  "description": "Browser for Krist addresses",
  "version": "1.0.0",
  "private": true,
  "author": "Fisher Medders <yo@fishermedders.com>",
  "copyright": "Â© 2020, fishermedders.com",
  "homepage": "http://kristconsole.kst",
  "main": "app/background.js",
  "build": {
    "appId": "kst.kristconsole",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "dns2": "^1.4.2",
    "electron-proxy-agent": "^1.2.0",
    "favicon-getter": "^1.1.3",
    "file-loader": "^6.2.0",
    "fs-jetpack": "^2.1.0",
    "jsonfile": "^6.1.0",
    "memcached": "^2.2.2",
    "node-fetch": "^2.6.1",
    "path": "^0.12.7",
    "session": "^0.1.0",
    "tldjs": "^2.3.1",
    "url": "^0.11.0",
    "url-loader": "^4.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@fortawesome/fontawesome-free": "^5.15.2",
    "babel-loader": "^8.0.0-beta.4",
    "chai": "^4.1.0",
    "css-loader": "^3.6.0",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "electron-mocha": "^8.1.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^7.1.1",
    "source-map-support": "^0.5.6",
    "spectron": "^10.0.1",
    "style-loader": "^1.3.0",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
